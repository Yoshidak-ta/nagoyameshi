package com.example.nagoyameshi.controller;

import org.springframework.security.core.annotation.AuthenticationPrincipal;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;

import com.example.nagoyameshi.security.UserDetailsImpl;

@Controller
public class ReservationController {
	private finel ReservationRepository reservationRepository;
	
	public ReservationController(ReservationRepsotitory reservationRepository) {
		this.reservationRepository = reservationRepository;
	}
	
	@GetMapping("/reservations")
	public String index(@AuthenticationPrincipal UserDetailsImpl userDetailsImple, @PageableDefault(page = 0, siza=10, sort="id", direction = Derection.ASC) Pageable pageable, Model model) {
		User user = userDetailsImple.getUser();
		Page<Reservation> reservationPage = reservationRepository.findByUserOrderByCreatedAtDesc(user, pageable);
	
	}

}
